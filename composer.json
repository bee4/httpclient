  "name": "bee4/transport",
  "description": "A simple chainable HTTP client.",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "StÃ©phane HULARD",
      "email": "s.hulard@chstudio.fr"
    }
  ],
  "require": {
    "php": ">=5.4.0",
    "ext-curl": "*",
    "bee4/events": "~1.1"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.0",
    "behat/behat": "~3",
    "evenement/evenement": "~2",
    "squizlabs/php_codesniffer": "~2.0"
  },
  "autoload": {
    "psr-4": {
      "Bee4\\Transport\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Bee4\\Test\\Transport\\": "test/units/Transport"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "cs": "vendor/bin/phpcs --standard=phpcs.xml src test",
    "cs-fixer": "vendor/bin/phpcbf --standard=phpcs.xml src test",
    "functional": "vendor/bin/behat"
  }
}
